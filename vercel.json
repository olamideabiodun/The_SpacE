{
    "version": 2,
    "builds": [
        {
            "src": "app/wsgi.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app/wsgi.py"
        }
    ],
    "env": {
        "FLASK_APP": "app/wsgi.py",
        "FLASK_ENV": "production"
    }
} 